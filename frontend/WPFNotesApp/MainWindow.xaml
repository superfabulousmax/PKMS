<Window x:Class="WPFNotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WPFNotesApp.ViewModels"
        Title="Notes App"
        Height="450"
        Width="600">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 10">
            <TextBox Width="150"
                     Margin="0 0 10 0"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Width="200"
                     Margin="0 0 10 0"
                     Text="{Binding Body, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Add Note"
                    Command="{Binding AddNoteCommand}"/>
        </StackPanel>

        <ListBox
                 ItemsSource="{Binding Notes}" Margin="-10,25,10,5" Grid.RowSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 5">
                        <TextBlock Text="{Binding Title}"
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding Body}"
                                   TextWrapping="Wrap"/>
                        <Button Content="Delete"
                        Command="{Binding DeleteNoteCommand}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
