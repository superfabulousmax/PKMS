<UserControl x:Class="WPFNotesApp.Views.AutoCompletePopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="200">

    <Popup Name="AutoCompletePopup"
           Placement="Absolute"
           AllowsTransparency="True"
           IsOpen="{Binding IsOpen, Mode=TwoWay}"
           HorizontalOffset="{Binding OffsetX}"
           VerticalOffset="{Binding OffsetY}"
           StaysOpen="False">

        <Border Background="White" BorderBrush="Gray" BorderThickness="1">
            <ListBox ItemsSource="{Binding Suggestions}"
                     SelectedItem="{Binding SelectedSuggestion, Mode=TwoWay}"
                     MouseDoubleClick="OnSuggestionSelected">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Margin="0 0 10 0" Text="{Binding Title}" FontWeight="Bold" />
                            <TextBlock Margin="0 0 10 0" Text="{Binding Body}" FontStyle="Italic" FontSize="12" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Popup>
</UserControl>
